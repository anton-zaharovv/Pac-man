<Window x:Class="PacManWpfApp.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="400">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Select Difficulty Level" FontSize="24" Margin="10"/>
        <ComboBox ItemsSource="{Binding Levels}" SelectedItem="{Binding SelectedLevel}" Width="200" Margin="10"/>
        <Button Content="Start Game" Command="{Binding StartGameCommand}" Width="100" Margin="10"/>
    </StackPanel>
</Window>
